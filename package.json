{
  "name": "picura-md",
  "version": "0.1.0",
  "description": "Editor de Markdown sostenible con funcionalidades avanzadas",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run type-check && npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "npm run build && npx electron-builder",
    "package:dir": "npm run build && npx electron-builder --dir",
    "package:mac": "npm run build && npx electron-builder --mac",
    "package:linux": "npm run build && npx electron-builder --linux",
    "package:win": "npm run build && npx electron-builder --win",
    "make": "npm run build && electron-builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "npm run type-check:main && npm run type-check:renderer",
    "type-check:main": "tsc -p tsconfig.json --noEmit",
    "type-check:renderer": "tsc -p tsconfig.renderer.json --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist release"
  },
  "author": "Picura MD Team",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.30.3",
    "classnames": "^2.3.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "isomorphic-git": "^1.23.0",
    "lowdb": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.8.1",
    "rehype": "^12.0.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.4",
    "tailwindcss": "^3.2.7",
    "unified": "^10.1.2",
    "uuid": "^9.0.0",
    "zustand": "^4.3.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.0",
    "electron-builder": "^24.13.0",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "postcss": "^8.4.21",
    "rimraf": "^5.0.7",
    "typescript": "^4.9.5",
    "vite": "^4.1.1"
  }
}